@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<TpGestionEcole.Models.Parcours>

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<h2 class="text-center mb-5">Bienvenu  sur StudySchool</h2>
<p class="text-center" >
    Vous souhaitez vous spécialiser dans un domaine précis et cherchez une formation ? <br />
    Bienvenue sur StudySchool ! Découvrez les parcours que nous proposons. <br />
    C'est aujourd'hui que votre futur commence.
</p>
<div class="container-fluid">
    <div class="row">
        @if (@Model.Count() > 0)
        {
            @foreach (var item in @Model)
            {
                <div class="col d-flex justify-content-center">
                    <a asp-controller="Parcours" asp-action="Details" asp-route-id="@item.Id" class="d-inline text-decoration-none">
                        <div class="card my-4" style="width: 18rem; height:290px">
                            <img class="card-img-top" src="@item.logo" alt="Card image cap" height="230" style="object-fit: cover" />
                            <div class="card-body">
                                <p class="card-text text-black">Parcours @item.Nom</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="container-fluid mt-5">
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <p class="h4">No carrer is available at now !</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
